slack_reporter:
- channel: "#art-release"
  job_states_to_report:
  - success
  - failure
  - error
  report_template: '{{ if eq .Status.State "success" }} :white_check_mark: {{ else }} :red_jenkins_circle: {{ end }} Job *{{.Spec.Job}}* ended with *{{.Status.State}}*. <{{.Status.URL}}|View logs>'
  job_names:
  - art-konflux-delivery-repo-check-periodic
