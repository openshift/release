{
  "tag_specification": {
    "cluster": "https://api.ci.openshift.org",
    "namespace": "azure",
    "name": "plugin-base"
  },
  "base_images": {
    "base": {
      "cluster": "https://api.ci.openshift.org",
      "namespace": "azure",
      "name": "plugin-base",
      "tag": "latest"
    }
  },
  "test_base_image": {
    "cluster": "https://api.ci.openshift.org",
    "namespace": "openshift",
    "name": "release",
    "tag": "golang-1.10"
  },

  "canonical_go_repository": "github.com/jim-minter/azure-helm",

  "binary_build_commands": "make sync",

  "images": [
    {
      "from": "base",
      "to": "sync",
      "dockerfile_path": "Dockerfile.sync",
      "inputs": {
        "bin": {"paths": [{"source_path": "/go/src/github.com/jim-minter/azure-helm/sync", "destination_dir": "."}]},
        "root": {"as": ["sync"]}
      }
    }
  ],

  "promotion": {
    "cluster": "https://api.ci.openshift.org",
    "namespace": "azure",
    "name": "azure-plugins"
  },

  "resources": {
    "*": {
      "requests": { "cpu": "100m", "memory": "200Mi" },
      "limits":   { "cpu": "2",    "memory": "4Gi" }
    }
  }
}
