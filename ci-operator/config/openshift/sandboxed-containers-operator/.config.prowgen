slack_reporter:
  - channel: '#kata-ocp-ci-reports'
    job_states_to_report:
      - success
      - failure
      - error
    report_template: '{{if eq .Status.State "success"}}SUCCESS{{else}}ERROR{{end}} {{trimPrefix "periodic-ci-openshift-sandboxed-containers-operator-" .Spec.Job}} <{{.Status.URL}}|View logs>'
    job_names:
      - aws-ipi-coco
      - aws-ipi-peerpods
      - azure-ipi-coco
      - azure-ipi-kata
      - azure-ipi-peerpods
      - aro-ipi-peerpods
      - aro-ipi-coco
