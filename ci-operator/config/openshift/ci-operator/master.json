{
  "tag_specification": {
    "cluster": "https://api.ci.openshift.org",
    "namespace": "openshift",
    "name": "origin-v3.11",
    "tag": "",
    "tag_overrides": {}
  },
  "base_images": {
    "os": {
      "cluster": "https://api.ci.openshift.org",
      "namespace": "openshift",
      "name": "centos",
      "tag": "7"
    }
  },
  "test_base_image": {
    "cluster": "https://api.ci.openshift.org",
    "namespace": "openshift",
    "name": "release",
    "tag": "golang-1.10"
  },

  "canonical_go_repository": "github.com/openshift/ci-operator",

  "binary_build_commands": "make install",

  "images": [
    {
      "from": "os",
      "to": "ci-operator",
      "context_dir": "images/ci-operator/",
      "inputs": {
        "bin": {
          "paths": [{
            "source_path": "/go/bin/ci-operator",
            "destination_dir": "."
          }]
        }
      }
    }
  ],

  "tests": [
    {
      "as": "unit",
      "from": "src",
      "commands": "ARTIFACT_DIR=/tmp/artifacts make test",
      "artifact_dir": "/tmp/artifacts"
    },
    {
      "as": "lint",
      "from": "src",
      "commands": "ARTIFACT_DIR=/tmp/artifacts make check",
      "artifact_dir": "/tmp/artifacts"
    }
  ],

  "resources": {
    "*": {
      "requests": { "cpu": "100m", "memory": "200Mi" },
      "limits":   { "cpu": "2",    "memory": "6Gi" }
    }
  }
}